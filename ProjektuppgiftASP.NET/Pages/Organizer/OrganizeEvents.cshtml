@page
@model ProjektuppgiftASP.NET.Pages.Organizer.OrganizeEventsModel

@{
    ViewData["Title"] = "OrganizeEvents";
}


    @if (TempData["Success"] != null)
    {
<div class="alert alert-success">
    @TempData["Success"]
</div>
    }
    @if (TempData["Error"] != null)
    {
<div class="alert alert-danger">
    @TempData["Error"]
</div>
    }

<h1>OrganizeEvents</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>

         

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
          

            <td>


                <a asp-page="./EditEvent" asp-route-id="@item.Id">Edit</a> |
                |
                <a asp-page="./DeleteEvent" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>

        }
    </tbody>

</table>


